<Window x:Class="WpfGestionBoutiqueFlorale.Views.ProprietaireView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGestionBoutiqueFlorale.Views"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="ProprietaireView" Height="450" Width="800">

    <DockPanel>
        

        <!-- Contenu central avec les onglets -->
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Padding" Value="15 10"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="1 1 1 0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            

            <!-- Onglet Fleurs -->
            <TabItem Header="Fleurs">
                <TabControl>
                    <TabItem Header="Afficher les fleurs">
                        <Grid Margin="10">
                            <DataGrid ItemsSource="{Binding FleursDisponibles}"
                                AutoGenerateColumns="False" 
                                CanUserAddRows="False"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding IdFleur}" />
                                    <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" />
                                    <DataGridTextColumn Header="Prix Unitaire" Binding="{Binding PrixUnitaire}" />
                                    <DataGridTextColumn Header="Couleur" Binding="{Binding CouleurDominante}" />
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Onglet Bouquets -->
            <TabItem Header="Bouquets">
                <TabControl>
                    <TabItem Header="Créer un bouquet personnalisé">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">

                            <!-- Fleurs -->
                            <StackPanel Orientation="Vertical" Margin="10">
                                <TextBlock Text="Sélectionnez les fleurs :" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ListBox x:Name="FleursListBox2"
                                    ItemsSource="{Binding FleursDisponibles}"
                                    SelectionMode="Multiple"
                                    DisplayMemberPath="Nom"
                                    Height="100"/>


                                <Label Content="NomBouquet*"
                                FontWeight="SemiBold"
                                Padding="0,0,0,2"/>
                                <TextBox Text="{Binding NomBouquet, UpdateSourceTrigger=PropertyChanged}"
                                Padding="8"
                                Height="35"/>


                                <Label Content="CartePersonalise*"
                                    FontWeight="SemiBold"
                                    Padding="0,0,0,2"/>
                                <TextBox Text="{Binding CartePersonalise, UpdateSourceTrigger=PropertyChanged}"
                                Padding="8"
                                Height="35"/>

                                <!-- Bouton Creer Bouquet -->
                                <Button Grid.Row="1"
                                    Content="Creer le Bouquet"
                                    Width="200"
                                    Height="40"
                                    Margin="10"
                                    HorizontalAlignment="Right"
                                    Command="{Binding CreerBouquet}"/>
                            </StackPanel>


                        </Grid>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Afficher les bouquets créés">
                        <Grid Margin="10">
                                <DataGrid ItemsSource="{Binding BouquetsDisponibles}"
                                AutoGenerateColumns="False" 
                                CanUserAddRows="False"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding IdBouquet}" />
                                    <DataGridTextColumn Header="Nom" Binding="{Binding NomBouquet}" />
                                    <DataGridTextColumn Header="Carte Personalisée" Binding="{Binding CartePersonnalise}" />
                                </DataGrid.Columns>
                            </DataGrid>
                         </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Onglet Commandes -->
            <TabItem Header="Commandes">
                <TabControl>
                    <TabItem Header="Valider une commande">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Label commande -->
                                <RowDefinition Height="Auto"/>
                                <!-- Combo commande -->
                                <RowDefinition Height="Auto"/>
                                <!-- Label vendeur -->
                                <RowDefinition Height="Auto"/>
                                <!-- Combo vendeur -->
                                <RowDefinition Height="Auto"/>
                                <!-- Bouton -->
                            </Grid.RowDefinitions>

                            <TextBlock Text="Sélectionnez une commande :" FontWeight="Bold" Margin="0,10,0,5" Grid.Row="0"/>
                            
                            <DataGrid ItemsSource="{Binding CommandeDisponibles}"
                                AutoGenerateColumns="False" 
                                SelectedItem="{Binding CommandeSelectionnee}"
                                CanUserAddRows="False"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding IdCommande}" />
                                    <DataGridTextColumn Header="Montant Total" Binding="{Binding MontantTotal}" />
                                    <DataGridTextColumn Header="Satut" Binding="{Binding EstValidee}" />

                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Content="Valider la commande" 
                            Width="200"
                            Height="40"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Command="{Binding ValiderCommande}"
                            Grid.Row="4"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Annuler une commande">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Label commande -->
                                <RowDefinition Height="Auto"/>
                                <!-- Combo commande -->
                                <RowDefinition Height="Auto"/>
                                <!-- Label vendeur -->
                                <RowDefinition Height="Auto"/>
                                <!-- Combo vendeur -->
                                <RowDefinition Height="Auto"/>
                                <!-- Bouton -->
                            </Grid.RowDefinitions>

                            <TextBlock Text="Sélectionnez une commande :" FontWeight="Bold" Margin="0,10,0,5" Grid.Row="0"/>
                                 
                            <DataGrid ItemsSource="{Binding CommandeDisponibles}"
                                AutoGenerateColumns="False" 
                                SelectedItem="{Binding CommandeSelectionnee}"
                                CanUserAddRows="False"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding IdCommande}" />
                                    <DataGridTextColumn Header="Montant Total" Binding="{Binding MontantTotal}" />
                                    <DataGridTextColumn Header="Satut" Binding="{Binding EstValidee}" />

                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Content="Annuler la commande"
                                Width="200"
                                Height="40"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"
                                Command="{Binding AnnulerCommande}"
                                Grid.Row="4"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Onglet Factures -->
            <TabItem Header="Factures">
                <TabControl>
                    <TabItem Header="Générer une facture">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Sélectionnez une commande :" FontWeight="Bold" Margin="0,10,0,5" Grid.Row="0"/>

                                <DataGrid ItemsSource="{Binding CommandeDisponibles}"
                                    AutoGenerateColumns="False" 
                                    SelectedItem="{Binding CommandeSelectionnee}"
                                    CanUserAddRows="False"
                                    IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IdCommande}" />
                                        <DataGridTextColumn Header="Montant Total" Binding="{Binding MontantTotal}" />
                                        <DataGridTextColumn Header="Satut" Binding="{Binding EstValidee}" />

                                    </DataGrid.Columns>
                                </DataGrid>

                                <TextBlock Text="Méthode de paiement :" FontWeight="Bold" Margin="0,10,0,5" Grid.Row="4"/>
                                <ComboBox 
                                    SelectedItem="{Binding MoyenPaiement}"
                                    Height="30" Margin="0,0,0,10"
                                    Grid.Row="5">
                                    <ComboBoxItem Content="Espece"/>
                                    <ComboBoxItem Content="Carte de credit"/>
                                    <ComboBoxItem Content="Carte de debit"/>
                                </ComboBox>

                                <Button Content="Generer la facture"
                                    Width="200"
                                    Height="40"
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    Command="{Binding GenererFacture}"
                                    Grid.Row="6"/>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Afficher les factures">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <DataGrid ItemsSource="{Binding FacturesDisponibles}"
                                 AutoGenerateColumns="False" 
                                 CanUserAddRows="False"
                                 IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding IdFacture}" />
                                    <DataGridTextColumn Header="Mode de paiement" Binding="{Binding ModePaiement}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
