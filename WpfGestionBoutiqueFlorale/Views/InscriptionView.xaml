<Window x:Class="WpfGestionBoutiqueFlorale.Views.InscriptionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGestionBoutiqueFlorale.Views"
        mc:Ignorable="d"
        Title="InscriptionView" Height="450" Width="800"
        Icon="/icones/inscription.ico">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Width="350" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Titre -->
                <TextBlock Text="Inscription" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,25"
                       HorizontalAlignment="Center"
                       Foreground="#FF2E8B57"/>

                <!-- Formulaire -->
                <StackPanel>
                    <!-- Nom -->
                    <StackPanel>
                        <Label Content="Username*"
                           FontWeight="SemiBold"
                           Padding="0,0,0,2"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Height="35"
                             />
                    </StackPanel>

                    <!-- Prénom -->
                    <StackPanel>
                        <Label Content="Firstname*"
                           FontWeight="SemiBold"
                           Padding="0,0,0,2"/>
                        <TextBox Text="{Binding Firstname, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Height="35"/>
                    </StackPanel>

                    <!-- Adresse -->
                    <StackPanel>
                        <Label Content="Lastname*"
                           FontWeight="SemiBold"
                           Padding="0,0,0,2"/>
                        <TextBox Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Height="35"/>
                    </StackPanel>

                    <!-- Role -->
                    <StackPanel>
                        <Label Content="Role(ex: client, vendeur, fournisseur, proprietaire)*"
                            FontWeight="SemiBold"
                            Padding="0,0,0,2"/>
                        <TextBox Text="{Binding Role, UpdateSourceTrigger=PropertyChanged}"
                            Padding="8"
                            Height="35"/>
                    </StackPanel>

                    <!-- Téléphone -->
                    <StackPanel>
                        <Label Content="Phone*" 
                           FontWeight="SemiBold"
                           Padding="0,0,0,2"/>
                        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Height="35"
                             InputScope="TelephoneNumber"/>
                    </StackPanel>


                    <!-- Email -->
                    <StackPanel>
                        <Label Content="Email*"
                        FontWeight="SemiBold"
                        Padding="0,0,0,2"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                          Padding="8"
                          Height="35"/>
                    </StackPanel>


                    <!-- Mot de passe -->
                    <StackPanel>
                        <Label Content="Password*"
                           FontWeight="SemiBold"
                           Padding="0,0,0,2"/>
                        <PasswordBox x:Name="MotPasswordBox" PasswordChanged="PasswordBox_PasswordChanged"
                                Padding="8"
                                Height="35"/>
                    </StackPanel>

                    <!-- Confirmation mot de passe -->
                    <StackPanel Margin="0,0,0,20">
                        <Label Content="ConfirmationPassword*"
                           FontWeight="SemiBold"
                           Padding="0,0,0,2"/>
                        <PasswordBox x:Name="ConfirmationPasswordBox" PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                Padding="8"
                                Height="35"/>
                    </StackPanel>

                    <!-- Bouton Valider -->
                    <Button Content="S'inscrire" 
                        Command="{Binding RegisterCommand}"
                        Margin="0,10" 
                        Padding="15,8"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Background="#FF2E8B57"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <!-- Lien vers connexion --><!--
                <TextBlock Margin="0,15,0,0" HorizontalAlignment="Center">
                <Hyperlink Command="{Binding NavigateToLoginCommand}" 
                          Foreground="#FF2E8B57">
                    Déjà un compte ? Se connecter
                </Hyperlink>
                </TextBlock>-->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
