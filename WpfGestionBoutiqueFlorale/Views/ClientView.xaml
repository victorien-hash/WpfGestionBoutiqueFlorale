<UserControl x:Class="WpfGestionBoutiqueFlorale.Views.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="800">

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Ajout d'un client" 
               FontSize="20" 
               FontWeight="Bold" 
               Margin="0,0,0,20"
               HorizontalAlignment="Center"/>

        <Label Content="Nom du client:" 
           FontWeight="SemiBold"
           Margin="0,5"
           HorizontalAlignment="Left"/>
        <TextBox x:Name="NomClientTextBox" 
             Margin="0,0,0,10"
             Padding="5"
             Width="250"
             HorizontalAlignment="Center"/>

        <Label Content="Prénom du client:" 
           FontWeight="SemiBold"
           Margin="0,5"
           HorizontalAlignment="Left"/>
        <TextBox x:Name="PrenomClientTextBox" 
             Margin="0,0,0,10"
             Padding="5"
             Width="250"
             HorizontalAlignment="Center"/>

        <Label Content="Adresse:" 
           FontWeight="SemiBold"
           Margin="0,5"
           HorizontalAlignment="Left"/>
        <TextBox x:Name="AdresseClientTextBox" 
             Margin="0,0,0,20"
             Padding="5"
             Width="250"
             HorizontalAlignment="Center"/>

        <Button Content="Ajouter" 
            Margin="0,10" 
            Padding="10,5"
            HorizontalAlignment="Center"
            MinWidth="100"
            Click="AjouterClient_Click"/>
    </StackPanel>
</UserControl>