<UserControl x:Class="WpfGestionBoutiqueFlorale.Views.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Ajout d'un client" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox x:Name="NomClientTextBox" Text="NOM"  Margin="0,5"/>
        <TextBox x:Name="EmailClientTextBox" Text="Prenom" Margin="0,5"/>
        <Button Content="Ajouter" Margin="0,10" Click="AjouterClient_Click"/>
    </StackPanel>
</UserControl>